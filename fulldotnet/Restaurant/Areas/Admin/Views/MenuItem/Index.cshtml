@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Menu Item List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-info form-control text-white">Create New MenuItem</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CategoryId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.SubCategoryId)
                        </th>
                        <th>
                            Operation
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Price)</td>
                            <td>@Html.DisplayFor(m => item.Category.Name)</td>
                            <td>@Html.DisplayFor(m => item.SubCategory.Name)</td>

                            <td>
                                <button asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want delete?')" class="btn btn-danger btn-sm ">Delete</button>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>

            }
            else
            {
                <p>No Menu Items Available.</p>
            }
        </form>
    </div>
</div>