@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="container row m-0 p-0">
    <div class="col-9">
        <h2 class="text-info">Sub Category Lists</h2>
    </div>

    <div class="col-3">
        <a asp-action="Create" class="btn btn-info form-control text-white">Create New SubCategory</a>
    </div>

    <div class="col-12 border p-3 m-3">
        <form method="post">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>Sub Category Id</th>
                        <th>Sub Category Name</th>
                        <th>Category Name</th>
                        <th>Operation</th>  
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Id)</td>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Category.Name)</td>
                            <td>
                                <button asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want delete?')" class="btn btn-danger btn-sm ">Delete</button>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Sub Categories Available.</p>
            }
        </form>
    </div>
</div>