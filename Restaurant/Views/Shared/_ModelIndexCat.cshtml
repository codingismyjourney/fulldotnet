@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "_ModelIndexCat";    
}

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-2">
                    <h3 class="text-success">@Model.FirstOrDefault().Category.Name</h3>
                </div>

                <div class="col-2">
                    <h4 class="text-success">@Model.FirstOrDefault().SubCategory.Name</h4>
                </div>

                <div class="col-1">
                    <h4 class="text-success">@item.Price</h4>
                </div>

                <div class="col-4">
                    <h4 class="text-success">@Html.Raw(item.Description)</h4>
                </div>

                <div class="col-3">
                    <img src="@item.Image" width="200" height="200" style="border: 1px solid #000000" />
                </div>
            }
        </div>
    </div>


